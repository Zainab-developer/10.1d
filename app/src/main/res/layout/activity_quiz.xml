<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:padding="16dp"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/quizContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

                <TextView
                    android:id="@+id/Header"
                    android:layout_width="match_parent"
                    android:background="@color/task_due_background"
                    android:layout_height="wrap_content"
                    android:text="Generated by AI"
                    android:textColor="@color/task_due_text"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/taskHeader"
                    android:layout_below="@id/Header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Generated Task 1"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:id="@+id/taskDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Small Description for the generated Task"
                    android:textSize="16sp"
                    android:padding="8dp" />

                <TextView
                    android:id="@+id/question1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1. Question 1"
                    android:textSize="20sp"
                    android:layout_marginTop="16dp" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <RadioButton
                        android:id="@+id/option1A"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Answer 1"
                        android:textSize="16sp"/>

                    <RadioButton
                        android:id="@+id/option1B"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Answer 2"
                        android:textSize="16sp"/>

                    <RadioButton
                        android:id="@+id/option1C"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Answer 3"
                        android:textSize="16sp"/>

                    <RadioButton
                        android:id="@+id/option1D"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Answer 4"
                        android:textSize="16sp"/>
                </RadioGroup>

                <TextView
                    android:id="@+id/question2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2. Question 2"
                    android:textSize="20sp"
                    android:layout_marginTop="16dp" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <RadioButton
                        android:id="@+id/option2A"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Answer 1"
                        android:textSize="16sp"/>

                    <RadioButton
                        android:id="@+id/option2B"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Answer 2"
                        android:textSize="16sp"/>

                    <RadioButton
                        android:id="@+id/option2C"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Answer 3"
                        android:textSize="16sp"/>

                    <RadioButton
                        android:id="@+id/option2D"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Answer 4"
                        android:textSize="16sp"/>
                </RadioGroup>

                <TextView
                    android:id="@+id/question3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3. Question 3"
                    android:textSize="20sp"
                    android:layout_marginTop="16dp" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <RadioButton
                        android:id="@+id/option3A"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Answer 1"
                        android:textSize="16sp"/>

                    <RadioButton
                        android:id="@+id/option3B"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Answer 2"
                        android:textSize="16sp"/>

                    <RadioButton
                        android:id="@+id/option3C"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Answer 3"
                        android:textSize="16sp"/>

                    <RadioButton
                        android:id="@+id/option3D"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Answer 4"
                        android:textSize="16sp"/>
                </RadioGroup>

                <Button
                    android:id="@+id/submitBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Submit"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:padding="12dp" />

    </LinearLayout>
</ScrollView>